{
	"name": "writer-essentials",
	"displayName": "Writer Essentials",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"onCommand:writer-essentials.initFolders"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "writer-essentials-container",
					"title": "Writer Essentials",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"writer-essentials-container": [
				{
					"id": "markdown-front-matter-view",
					"name": "Front Matter"
				},
				{
					"id": "markdown-stats-view",
					"name": "Statistics"
				}
			]
		},
		"commands": [
			{
			  "command": "writer-essentials.initFolders",
			  "title": "Init Project Folders",
			  "category": "Writer Essentials"
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/js-yaml": "^3.12.1",
		"@types/mkdirp": "^0.5.2",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.3",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}
